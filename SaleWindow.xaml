<Window x:Class="CompuSale.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompuSale"
        mc:Ignorable="d"
        Title="Продажа" Height="570" Width="1080">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="RoundedTextBoxStyle">
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="4" 
                        Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Height="514" Width="1018">
        <ComboBox Margin="0,126,718,362">
            <ComboBoxItem Content="Создана"/>
            <ComboBoxItem Content="Подтверждена "/>
            <ComboBoxItem Content="Оплачена"/>
            <ComboBoxItem Content="Отправлена"/>
            <ComboBoxItem Content="Доставлена"/>
            <ComboBoxItem Content="Отменена"/>
        </ComboBox>
        <Grid Margin="-29,66,689,234">
            <StackPanel>
                <TextBox x:Name="clientTextBox" MaxLength="20" Width="300" Height="36" TextChanged="ClientTextBox_TextChanged" KeyDown="EnterPress" Style="{StaticResource RoundedTextBoxStyle}" FontSize="18" PreviewKeyDown="clientTextBox_PreviewKeyDown"/>
                <ListBox x:Name="clientSuggestionsListBox" Width="300" Height="100" VerticalAlignment="Top" Margin="0,5,0,0" 
    Visibility="Collapsed" PreviewMouseLeftButtonUp="ClientSuggestionsListBox_MouseLeftButtonUp"/>
            </StackPanel>
            <TextBlock x:Name="clientWatermark"
                Text="Клиент"
                Foreground="Gray"
                FontFamily="Calibri"
                FontSize="18"
                VerticalAlignment="Top"
                IsHitTestVisible="False"
                Visibility="Visible" Margin="40,7,-22,0"/>
        </Grid>
        <TextBlock x:Name="employeeNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="200" FontFamily="Calibri"/>
        <TextBox x:Name="searchTextBox" MaxLength="50" Width="300" Height="36" TextChanged="searchTextBox_TextChanged" Style="{StaticResource RoundedTextBoxStyle}" FontSize="18" Margin="670,0,48,478"/>
        <TextBlock x:Name="searchWatermark"
            Text="Товар"
            Foreground="Gray"
            FontFamily="Calibri"
            FontSize="18"
            VerticalAlignment="Top"
            IsHitTestVisible="False"
            Visibility="Visible" Margin="680,7,257,0"/>
        <Button x:Name="searchBtn" Click="SearchBtn_Click" Margin="983,0,0,478">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="#E6E6E6"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFDADADA"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FFDADADA"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Content>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="18" Width="25">
                    <Image Width="18" Height="18" Source="/search.png"/>
                </StackPanel>
            </Button.Content>
            <Button.ToolTip>
                <ToolTip Background="white" Foreground="Black" FontSize="14">
                    Поиск
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <Button x:Name="saveBtn" Click="SaveBtn_Click" Margin="935,447,48,31" Width="30" Height="30">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="#E6E6E6"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFDADADA"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FFDADADA"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Content>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Height="18" Width="25">
                    <Image Width="18" Height="18" Source="/save2.png"/>
                </StackPanel>
            </Button.Content>
            <Button.ToolTip>
                <ToolTip Background="white" Foreground="Black" FontSize="14">
                    Поиск
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <ListBox Name="searchResultsListBox" SelectionChanged="SearchResultsListBox_SelectionChanged" Margin="670,47,0,362"/>
        <DataGrid Name="selectedProductsDataGrid" AutoGenerateColumns="True" Margin="670,172,0,146"></DataGrid>
        <DatePicker Name="saleDatePicker" SelectedDateFormat="Short" Margin="10,426,902,64" />
    </Grid>
</Window>
